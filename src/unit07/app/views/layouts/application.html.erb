<!DOCTYPE html>
<html>
<head>
  <title>Unit07</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<%= render "header" %>

<body>

<p id="flash">
	<% flash.each do |name, message| %>
		<p><i><%= "#{name}: #{message}" %></i></p>
	<% end %>
</p>

<%= yield %>

</body>

<%= render "footer" %>

</html>
